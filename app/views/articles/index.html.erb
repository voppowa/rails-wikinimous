<div class="container">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <div class="article-body">
          <% @articles.each do |article| %>
            <h2> <%= link_to article.title, article_path(article) %> </h2>

            <p><%= truncate(article.text, length: 135, omission: "") %></p>

          <% end %>
        </div>
      </div>
    </div>
</div>




